{% extends 'base.html.twig' %}

{% block title %}Film index{% endblock %}

{% block body %}
<div style="margin-left:10%">
    <h1>Film index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Photo</th>
                <th>Genre</th>
                <th>Langue</th>
                <th>TypeDeTournage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td>{{ film.id }}</td>
                <td>{{ film.titre }}</td>
                <td>
                    <img src={{asset('uploads/' ~ film.photo)}} width="50%" />
                </td>
                <td>{{ film.genre }}</td>
                <td>{{ film.langue }}</td>
                <td>{{ film.typeDeTournage }}</td>
                <td>
                    <a href="{{ path('app_film_show', {'id': film.id}) }}">show</a>
                    <a href="{{ path('app_film_edit', {'id': film.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_film_new') }}">Create new</a>
</div>
{% endblock %}
